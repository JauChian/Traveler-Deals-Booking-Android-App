<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile"
    android:orientation="vertical"
    tools:context=".CustomerDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icn_back"
            android:layout_gravity="start"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            style="@style/FontStyleL"
            android:text="Edit Profile" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            app:cardCornerRadius="85dp"
            android:elevation="4dp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pic_profile"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/btn_edit_profile_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icn_edit"
            android:layout_gravity="bottom|end"
            android:elevation="6dp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="20dp">
        <TextView
            style="@style/FontStyleM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/et_change_name"
            style="@style/RoundedEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Joy"
            android:layout_marginTop="4dp"
            android:textColorHint="#757575"
            android:inputType="textPersonName" />

        <TextView
            style="@style/FontStyleM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />

        <EditText
            android:id="@+id/et_change_email"
            style="@style/RoundedEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="user@gmail.com"
            android:textColorHint="#757575"
            android:inputType="textEmailAddress" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/FontStyleM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Password" />
            <TextView
                style="@style/FontStyleS"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:text="@string/underlined_change_password" />
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_password"
                style="@style/RoundedEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:text="******"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            style="@style/FontStyleM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile" />
        <EditText
            android:id="@+id/et_change_mobile"
            style="@style/RoundedEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:textColorHint="#757575"
            android:text="null"
            android:inputType="phone" />
    </LinearLayout>
    <TextView
        style="@style/FontStyleWhiteL"
        android:id="@+id/btn_save_changes"
        android:background="@drawable/background_btn_gradient2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Save Changes"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="24dp"/>

</LinearLayout>