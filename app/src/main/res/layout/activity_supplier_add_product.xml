<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile"
    android:orientation="vertical"
    tools:context=".SupplierAddProduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icn_back"
            android:layout_gravity="start"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            style="@style/FontStyleL"
            android:text="New Product" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="130dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="310dp"
            android:layout_height="125dp"
            android:src="@drawable/pic_img_large"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/btn_add_product_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icn_add_bule"
            android:layout_gravity="bottom|end"
            android:elevation="6dp" />
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_margin="20dp">
            <TextView
                style="@style/FontStyleM"
                android:layout_marginVertical="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name" />

            <EditText
                android:id="@+id/et_new_product_name"
                style="@style/RoundedEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="AJ Bungy Jumping Auckland"
                android:textColorHint="#757575"
                android:inputType="textPersonName" />
            <TextView
                style="@style/FontStyleM"
                android:layout_marginVertical="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Original Price" />

            <EditText
                android:id="@+id/et_new_product_original_price"
                style="@style/RoundedEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="399"
                android:textColorHint="#757575"
                android:inputType="textPersonName" />
            <TextView
                style="@style/FontStyleM"
                android:layout_marginVertical="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount Percentage" />

            <EditText
                android:id="@+id/et_new_product_discount_percentage"
                style="@style/RoundedEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="Please Enter between 0-100"
                android:textColorHint="#757575"
                android:inputType="textPersonName" />
            <TextView
                style="@style/FontStyleM"
                android:layout_marginVertical="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Region" />

            <Spinner
                android:id="@+id/sp_new_product_region"
                android:layout_width="match_parent"
                android:background="@drawable/background_edittext_rounded"
                android:layout_height="48dp"
                android:layout_marginTop="4dp" />

            <TextView
                style="@style/FontStyleM"
                android:layout_marginVertical="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category" />

            <Spinner
                android:id="@+id/sp_new_product_category"
                android:layout_width="match_parent"
                android:background="@drawable/background_edittext_rounded"
                android:layout_height="48dp"
                android:layout_marginTop="4dp" />

            <TextView
                style="@style/FontStyleM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description" />

            <EditText
                android:id="@+id/et_new_product_description"
                style="@style/RoundedEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="4dp"
                android:hint="Write your product description here"
                android:textColorHint="#757575"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:overScrollMode="always" />
        </LinearLayout>
    </ScrollView>

    <TextView
        style="@style/FontStyleWhiteL"
        android:id="@+id/btn_add_product"
        android:background="@drawable/background_btn_gradient2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Add"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="24dp"/>

</LinearLayout>