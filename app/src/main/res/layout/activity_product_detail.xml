<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".ProductDetail">

    <ImageView
        android:id="@+id/img_product_detail"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_skycity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/top_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:src="@drawable/icn_back" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:src="@drawable/icn_save" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:src="@drawable/icn_share" />
        <ImageView
            android:id="@+id/add_to_cart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:src="@drawable/icn_add_cart" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollable_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/book_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_part">

        <LinearLayout
            android:id="@+id/product_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_category_round"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_detail_discount"
                    style="@style/FontStyleWhiteM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/background_btn_small"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="33% OFF" />

                <TextView
                    android:id="@+id/tv_product_detail_region"
                    style="@style/FontStyleWhiteM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/background_btn_small"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Auckland" />

                <TextView
                    android:id="@+id/tv_product_detail_cat"
                    style="@style/FontStyleWhiteM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_btn_small"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Tickets" />
            </LinearLayout>

            <TextView
                android:id="@+id/t_product_detail_product_name"
                style="@style/FontStyleXL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Sky Tower Ticket" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#565454" />

            <TextView
                style="@style/FontStyleL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Description" />

            <TextView
                android:id="@+id/tv_product_detail_description_detail"
                style="@style/FontStyleS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Sky Tower, a magnificent 328-meter-high structure, has been the focal point of Auckland for over 25 years, delighting both locals and visitors. Recently awarded the #1 Attraction in Auckland, it offers incredible 360° views of Tāmaki Makaurau, encompassing ancient volcanoes, sparkling sunlit harbors, and beyond. Discover the full story of this modern engineering marvel, from its pioneering past to its colorful present and visionary future. Now, it’s your turn to experience it." />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#565454" />

            <TextView
                style="@style/FontStyleL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Ticket" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_detail_price"
                    style="@style/FontStyleM"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="$29" />
                <TextView
                    android:id="@+id/tv_product_detail_original_price"
                    style="@style/FontStyleRed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="$59" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btn_product_detail_minus_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icn_minus" />

                <TextView
                    android:id="@+id/btn_product_detail_qty"
                    style="@style/FontStyleRed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="0" />

                <ImageView
                    android:id="@+id/btn_product_detail_add_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icn_plus" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/book_section"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#565454" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/FontStyleM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"/>
            <TextView
                android:id="@+id/tv_product_detail_total_price"
                style="@style/FontStyleL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="end"
                android:text="$ 29" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_product_detail_you_have_saved"
            style="@style/FontStyleRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="You have saved $ 21" />
        <TextView
            android:layout_margin="10dp"
            style="@style/FontStyleWhiteL"
            android:id="@+id/btn_product_detail_book_now"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/background_btn_gradient2"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Book Now"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
