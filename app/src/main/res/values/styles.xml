<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedEditTextStyle">
        <item name="android:background">@drawable/background_edittext_rounded</item>
        <item name="android:paddingLeft">16dp</item> <!-- 内边距 -->
        <item name="android:paddingRight">16dp</item> <!-- 内边距 -->
        <item name="android:paddingTop">10dp</item> <!-- 内边距 -->
        <item name="android:paddingBottom">10dp</item> <!-- 内边距 -->
        <item name="android:textColorHint">@android:color/darker_gray</item> <!-- 提示文本颜色 -->
        <item name="android:textSize">12sp</item> <!-- 文本大小 -->
    </style>
